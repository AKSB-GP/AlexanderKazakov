<script>
    document.addEventListener("DOMContentLoaded", function () {
        const items = document.querySelectorAll(".circle-container li");
        const totalItems = items.length;
        const angleStep = 90 / (totalItems - 1); // Spread items over 180 degrees

        items.forEach((item, index) => {
            const angle = angleStep * index + 130; // Adjust to start from top center
            (item as HTMLElement).style.setProperty("--rotate", `${angle}deg`);
        });
    });
</script>