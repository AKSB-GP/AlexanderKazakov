<style>
    .circle-container {
        position: relative;
        width: 600px; /* Adjust size as needed */
        height: 600px; /* Adjust size as needed */
        list-style: none;
        border: 1px solid red ; /* Optional: to visualize the container */
        border-radius: 50%;
        
    }

    .circle-container li {
        position: absolute;
        top: 50%;
        right: 60%;
        transform-origin: center;
        text-align: center;
        transform: rotate(var(--rotate, 0deg)) translate(280px)
            rotate(calc(-1 * var(--rotate, 0deg)));
    }

    .circle-container li h1 {
        margin: 0;
        font-size: 2rem; /* 48px */
        line-height: 1;
    }

    .circle-container li a {
        display: block;
        text-decoration: none;
        color: white;
    }

    /*
